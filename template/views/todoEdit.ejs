<div class="todo-container">
    <h2>To-Do List</h2>
    <div class="todo">
        <form action="/" method="POST" class="todo-header">
            <input type="text" name="content" required>
            <button type="submit"><span class="fas fa-plus"></span></button>
        </form>
        <ul class="todo-list">
            <% todoTasks.forEach(elem => { %>
                <% if (elem._id == idTask) { %>
                    <li class="todo-list-item">
                        <form action="/edit/<%= elem._id %>" method="POST">
                            <input type="text" value="<%= elem.content %>" name="content">
                            <button type="submit">Confirm</button>
                            <a href="/" class="cancel">Cancel</a>
                        </form>
                    </li>
                <% } else { %>
                    <li class="todo-list-item">
                        <div class="todo-list-item-name"><%= elem.content %></div>
                        <a href="/edit/<% elem._id %>" class="edit"> <span class="fas fa-edit"></span></a>
                        <a href="/remove/<% elem._id %>" class="remove"> <span class="fas fa-times"></span></a>
                    </li>
                <% } %>
            <% }) %>
        </ul>
    </div>
</div>